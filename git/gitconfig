  st = status
  lease-push = push --force-with-lease
  rbi = rebase -i
  rb = rebase
  rbim = ! git fetch && git rebase -i origin/master
  rbm = ! git fetch && git rebase origin/master
  fp = fetch -p
  d = diff
  dc = diff --cached
