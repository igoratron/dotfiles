{
  "title": "Change quote to Control",
  "rules": [
    {
      "description": "Post Control if held.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": [
            {
              "key_code": "quote"
            }
          ],
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ]
        }
      ]
    }
  ]
}
